version: '3.8'

services:
  # MySQL 数据库
  mysql:
    image: mysql:8.0
    container_name: user-center-mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: admin@123321
      MYSQL_DATABASE: levi
      TZ: Asia/Shanghai
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ../sql/create_table.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - user-center-network
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h 127.0.0.1 -uroot -p$${MYSQL_ROOT_PASSWORD} --silent"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  # Redis 缓存
  redis:
    image: redis:7-alpine
    container_name: user-center-redis
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - user-center-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 5
    command: redis-server --appendonly yes

  # Go 应用
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: user-center-app
    restart: always
    ports:
      - "8080:8080"
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_healthy
    environment:
      - TZ=Asia/Shanghai
    volumes:
      - ./config.docker.yaml:/root/config.yaml:ro
      - ./logs:/root/logs
    networks:
      - user-center-network
    command: ["./user-center"]

volumes:
  mysql_data:
    driver: local
  redis_data:
    driver: local

networks:
  user-center-network:
    driver: bridge
